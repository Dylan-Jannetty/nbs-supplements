---
import BaseLayout from "../layouts/BaseLayout.astro";
import Newsletter from "../components/Newsletter.astro";
import { Image } from "astro:assets";
import catalystStacked from "../images/catalyst-stacked.png";
import { StructuredDataGenerator } from "../lib/structured-data";

// SEO Data with enhanced keyword targeting
const seoData = {
  title: "Natural Pre-Workout Supplements | Clean, Pharmacist-Formulated | NBS",
  description:
    "Discover Catalyst, the pharmacist-formulated pre-workout with clinical doses of creatine, L-citrulline, and natural ingredients. No fillers, no fluff - just results.",
  keywords:
    "natural pre-workout supplements, clean pre-workout, pharmacist formulated supplements, clinical dose pre-workout, best natural pre-workout without artificial ingredients",
};

// Generate comprehensive structured data
const structuredData = StructuredDataGenerator.generateHomepageSchema();
---

<BaseLayout 
  title={seoData.title} 
  description={seoData.description}
  structuredData={structuredData}
>

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-nbs-clinical via-background to-nbs-primary/5 py-20 lg:py-32 overflow-hidden"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto">
        <!-- Hero Content -->
        <div class="space-y-8 animate-slide-up">
          <h1
            class="text-4xl sm:text-5xl lg:text-6xl font-bold text-nbs-trust leading-tight"
          >
            Clean, Clinically Dosed Supplements -
            <span class="gradient-text">No Fillers, No Fluff</span>
          </h1>

          <p
            class="text-lg sm:text-xl text-muted-foreground leading-relaxed max-w-2xl"
          >
            Pharmacist-formulated with clinical doses of proven ingredients.
            Experience the difference of supplements designed by professionals
            who understand both science and results.
          </p>

          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-3">
            <div class="trust-signal">
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Pharmacist Formulated</span>
            </div>

            <div class="trust-signal">
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h2m0-2h10m-5-5v5"></path>
              </svg>
              <span>Third-Party Tested</span>
            </div>

            <div class="trust-signal">
              <svg
                class="w-5 h-5"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
