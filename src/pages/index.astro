---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/homepage/HeroSection.astro";
import ValuePropositions from "../components/homepage/ValuePropositions.astro";
import ProductShowcase from "../components/homepage/ProductShowcase.astro";
import SocialProof from "../components/homepage/SocialProof.astro";
import TrustBadges from "../components/homepage/TrustBadges.astro";
import NewsletterSignup from "../components/homepage/NewsletterSignup.astro";
import { StructuredDataGenerator } from "../lib/structured-data";

// SEO Data with enhanced keyword targeting
const seoData = {
  title: "Natural Pre-Workout Supplements | Clean, Pharmacist-Formulated | NBS",
  description:
    "Discover Catalyst, the pharmacist-formulated pre-workout with clinical doses of creatine, L-citrulline, and natural ingredients. No fillers, no fluff - just results.",
  keywords:
    "natural pre-workout supplements, clean pre-workout, pharmacist formulated supplements, clinical dose pre-workout, best natural pre-workout without artificial ingredients",
};

// Generate comprehensive structured data
const structuredData = StructuredDataGenerator.generateHomepageSchema();
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  structuredData={structuredData}
>
  <HeroSection />
  <ValuePropositions />
  <ProductShowcase />
  <SocialProof />
  <TrustBadges />
  <NewsletterSignup />
</BaseLayout>