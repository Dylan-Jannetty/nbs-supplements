---
import BaseLayout from '../layouts/BaseLayout.astro';
import AboutHero from '../components/about/AboutHero.astro';
import CompanyStory from '../components/about/CompanyStory.astro';
import TeamSection from '../components/about/TeamSection.astro';

// SEO data
const seoData = {
  title: "About NBS Supplements - Pharmacist-Formulated Natural Supplements | Meet Our Team",
  description: "Meet the four pharmacists behind NBS Supplements. Learn about our mission to create clean, clinically-dosed natural supplements with complete transparency.",
  keywords: "pharmacist formulated supplements, NBS team, natural supplements company, clean supplement company",
  canonicalUrl: "https://supplements-nbs.com/about"
};

// Team member data
const teamMembers = [
  {
    name: "Dr. Sarah Johnson, PharmD",
    role: "Co-Founder & Head of Formulation",
    experience: "12 years",
    specialization: "Sports Nutrition & Clinical Research",
    education: "PharmD from Rutgers University",
    image: "/images/team-sarah.jpg",
    bio: "Sarah specializes in sports nutrition and has published research on supplement bioavailability. She leads our formulation team and ensures every ingredient meets clinical standards."
  },
  {
    name: "Dr. Michael Chen, PharmD",
    role: "Co-Founder & Quality Assurance",
    experience: "15 years",
    specialization: "Pharmaceutical Manufacturing & Quality Control",
    education: "PharmD from University of the Sciences",
    image: "/images/team-michael.jpg",
    bio: "Michael oversees our quality assurance processes and third-party testing protocols. His background in pharmaceutical manufacturing ensures our products meet the highest standards."
  },
  {
    name: "Dr. Jennifer Martinez, PharmD",
    role: "Co-Founder & Regulatory Affairs",
    experience: "10 years",
    specialization: "FDA Regulations & Product Safety",
    education: "PharmD from St. John's University",
    image: "/images/team-jennifer.jpg",
    bio: "Jennifer ensures all our products comply with FDA regulations and industry best practices. She manages our regulatory affairs and safety protocols."
  },
  {
    name: "Dr. David Thompson, PharmD",
    role: "Co-Founder & Research Director",
    experience: "14 years",
    specialization: "Clinical Research & Evidence-Based Medicine",
    education: "PharmD from Arnold & Marie Schwartz College",
    image: "/images/team-david.jpg",
    bio: "David leads our research initiatives and ensures all our formulations are backed by solid scientific evidence. He stays current with the latest supplement research."
  }
];

---

<BaseLayout 
  title={seoData.title}
  description={seoData.description}
  canonical={seoData.canonicalUrl}
>
  <!-- Structured Data Schema -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://supplements-nbs.com/#organization",
          "name": "NBS Supplements",
          "alternateName": "No Bullsh*t Supplements",
          "url": "https://supplements-nbs.com",
          "logo": {
            "@type": "ImageObject",
            "url": "https://supplements-nbs.com/images/nbs-logo.png"
          },
          "description": "NBS Supplements is a team of four passionate pharmacists committed to delivering the highest-quality, all-natural supplements with clinical dosing and complete transparency.",
          "foundingDate": "2022",
          "founders": [
            {
              "@type": "Person",
              "name": "Dr. Sarah Johnson",
              "jobTitle": "Co-Founder & Head of Formulation",
              "alumniOf": "Rutgers University"
            },
            {
              "@type": "Person", 
              "name": "Dr. Michael Chen",
              "jobTitle": "Co-Founder & Quality Assurance",
              "alumniOf": "University of the Sciences"
            },
            {
              "@type": "Person",
              "name": "Dr. Jennifer Martinez", 
              "jobTitle": "Co-Founder & Regulatory Affairs",
              "alumniOf": "St. John's University"
            },
            {
              "@type": "Person",
              "name": "Dr. David Thompson",
              "jobTitle": "Co-Founder & Research Director",
              "alumniOf": "Arnold & Marie Schwartz College"
            }
          ],
          "address": {
            "@type": "PostalAddress",
            "addressRegion": "NJ",
            "addressCountry": "US"
          },
          "contactPoint": {
            "@type": "ContactPoint",
            "contactType": "customer service",
            "email": "hello@supplements-nbs.com"
          },
          "sameAs": [
            "https://www.instagram.com/nbssupplements/",
            "https://www.facebook.com/nbssupplements/",
            "https://www.youtube.com/@nbssupplements"
          ]
        },
      ]
    }
  </script>

  <main class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Hero Section -->
    <AboutHero />

    <!-- Company Story Sections -->
    <CompanyStory />

    <!-- Team Credentials -->
    <TeamSection teamMembers={teamMembers} />

    <!-- Call to Action -->
    <section class="py-16 lg:py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-foreground mb-6">
          Ready to Experience the NBS Difference?
        </h2>
        <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
          Join thousands of customers who've discovered what happens when pharmacists 
          create supplements with integrity, transparency, and your results in mind.
        </p>

        <div class="grid sm:grid-cols-2 gap-4 max-w-md mx-auto mb-8">
          <a 
            href="/products/catalyst" 
            class="btn btn-primary btn-lg bg-nbs-primary hover:bg-nbs-primary/90 text-white"
          >
            Try Catalyst Today
          </a>
          <a 
            href="/contact" 
            class="btn btn-outline btn-lg"
          >
            Get in Touch
          </a>
        </div>

        <!-- Newsletter Signup -->
        <div class="bg-muted/50 rounded-2xl p-6 lg:p-8">
          <h3 class="text-xl font-bold text-foreground mb-4">Stay Updated</h3>
          <p class="text-muted-foreground mb-6">
            Get updates on new products, ingredient research, and exclusive insights from our pharmacist team.
          </p>
          
          <form name="about-newsletter" method="POST" data-netlify="true" class="max-w-md mx-auto">
            <input type="hidden" name="form-name" value="about-newsletter" />
            <input type="hidden" name="source" value="about-page" />
            
            <div class="flex gap-3">
              <input
                type="email"
                name="email"
                required
                placeholder="Enter your email"
                class="flex-1 px-4 py-3 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-nbs-primary"
              />
              <button type="submit" class="btn btn-primary bg-nbs-primary hover:bg-nbs-primary/90">
                Subscribe
              </button>
            </div>
            
            <p class="text-xs text-muted-foreground mt-3">
              No spam, just science. Unsubscribe anytime.
            </p>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="mt-12 pt-8 border-t border-border">
          <div class="grid sm:grid-cols-3 gap-6 text-center">
            <div>
              <h4 class="font-semibold text-foreground mb-2">Email Us</h4>
              <a href="mailto:hello@supplements-nbs.com" class="text-nbs-primary hover:underline">
                hello@supplements-nbs.com
              </a>
            </div>
            <div>
              <h4 class="font-semibold text-foreground mb-2">Response Time</h4>
              <p class="text-muted-foreground">Within 24 hours</p>
            </div>
            <div>
              <h4 class="font-semibold text-foreground mb-2">Follow Us</h4>
              <div class="flex justify-center gap-3">
                <a href="https://www.instagram.com/nbssupplements/" class="text-nbs-primary hover:text-nbs-primary/80">
                  Instagram
                </a>
                <a href="https://www.facebook.com/nbssupplements/" class="text-nbs-primary hover:text-nbs-primary/80">
                  Facebook
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>