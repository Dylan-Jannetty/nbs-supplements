---
import { Image } from "astro:assets";
import logo from "../images/logo.png";

// Header component for NBS Supplements
// Professional navigation with mobile-first responsive design
// Includes theme toggle, mobile menu, and accessibility features
---

<!-- @ts-nocheck HTML template - Astro syntax, not React/JSX -->

<header
  class="sticky top-0 z-50 w-full glass-effect border-b border-border/50"
  style="position: sticky; top: 0; z-index: 50;"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo and Brand -->
      <div class="flex items-center relative z-50">
        <a
          href="/"
          class="flex items-center space-x-2 text-foreground hover:text-nbs-primary transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary rounded-md p-1"
          aria-label="NBS Supplements Home"
        >
          <Image class="max-w-20 h-auto" src={logo} alt="NBS Logo" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav
        class="hidden md:flex items-center space-x-1"
        aria-label="Main navigation"
      >
        <a
          href="/"
          class="px-3 py-2 rounded-md text-sm font-medium text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
          aria-current="page"
        >
          Home
        </a>
        <a
          href="/products/catalyst"
          class="px-3 py-2 rounded-md text-sm font-medium text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
        >
          Products
        </a>
        <a
          href="/about"
          class="px-3 py-2 rounded-md text-sm font-medium text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
        >
          About Us
        </a>
        <a
          href="/blog"
          class="px-3 py-2 rounded-md text-sm font-medium text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
        >
          Blog
        </a>
        <a
          href="/contact"
          class="px-3 py-2 rounded-md text-sm font-medium text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
        >
          Contact
        </a>
      </nav>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-2 relative z-50">
        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-md text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
          aria-label="Toggle theme"
          aria-pressed="false"
        >
          <!-- Sun icon for light mode -->
          <svg
            id="sun-icon"
            class="w-5 h-5 transition-transform duration-200"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
          <!-- Moon icon for dark mode -->
          <svg
            id="moon-icon"
            class="w-5 h-5 transition-transform duration-200 hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            ></path>
          </svg>
        </button>

        <!-- Cart Icon (placeholder for future Gumroad integration) -->
        <button
          class="relative p-2 rounded-md text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
          aria-label="Shopping cart (0 items)"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6.5-5v5a2 2 0 01-2 2H9a2 2 0 01-2-2v-5"
            ></path>
          </svg>
          <!-- Cart badge (hidden when empty) -->
          <span
            class="absolute -top-1 -right-1 bg-nbs-accent text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-medium hidden"
            aria-hidden="true"
          >
            0
          </span>
        </button>

        <!-- Mobile Menu Toggle -->
        <button
          id="mobile-menu-toggle"
          class="md:hidden p-2 rounded-md text-foreground hover:text-nbs-primary hover:bg-nbs-primary/5 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary"
          aria-label="Open mobile menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <!-- Hamburger icon -->
          <svg
            id="hamburger-icon"
            class="w-5 h-5 transition-transform duration-200"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <!-- X icon -->
          <svg
            id="x-icon"
            class="w-5 h-5 transition-transform duration-200 hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu - Full Viewport Overlay -->
    <div
      id="mobile-menu"
      class="md:hidden fixed top-0 left-0 right-0 bottom-0 z-40 hidden bg-background/95 backdrop-blur-3xl"
      role="menu"
      aria-orientation="vertical"
      aria-labelledby="mobile-menu-toggle"
      style="backdrop-filter: blur(60px); -webkit-backdrop-filter: blur(60px);"
    >
      <!-- Full Screen Navigation - 100vw x 100vh with Centered Items -->
      <nav
        class="flex flex-col w-screen h-screen justify-center items-center space-y-4 bg-background/90 backdrop-blur-xl shadow-2xl py-8"
        role="navigation"
        id="mobile-nav-container"
      >
        <a
          href="/"
          class="w-full max-w-md h-16 text-3xl font-semibold text-center text-foreground hover:text-nbs-primary transition-all duration-300 flex items-center justify-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary hover:bg-foreground/10 rounded-lg"
          role="menuitem"
        >
          Home
        </a>
        <a
          href="/products/catalyst"
          class="w-full max-w-md h-16 text-3xl font-semibold text-center text-foreground hover:text-nbs-primary transition-all duration-300 flex items-center justify-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary hover:bg-foreground/10 rounded-lg"
          role="menuitem"
        >
          Products
        </a>
        <a
          href="/about"
          class="w-full max-w-md h-16 text-3xl font-semibold text-center text-foreground hover:text-nbs-primary transition-all duration-300 flex items-center justify-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary hover:bg-foreground/10 rounded-lg"
          role="menuitem"
        >
          About Us
        </a>
        <a
          href="/blog"
          class="w-full max-w-md h-16 text-3xl font-semibold text-center text-foreground hover:text-nbs-primary transition-all duration-300 flex items-center justify-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary hover:bg-foreground/10 rounded-lg"
          role="menuitem"
        >
          Blog
        </a>
        <a
          href="/contact"
          class="w-full max-w-md h-16 text-3xl font-semibold text-center text-foreground hover:text-nbs-primary transition-all duration-300 flex items-center justify-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-nbs-primary hover:bg-foreground/10 rounded-lg"
          role="menuitem"
        >
          Contact
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  // TypeScript declarations for window properties
  declare global {
    interface Window {
      toggleTheme?: () => void;
    }
  }

  // Theme toggle functionality
  function initThemeToggle() {
    const themeToggle = document.getElementById("theme-toggle");
    const sunIcon = document.getElementById("sun-icon");
    const moonIcon = document.getElementById("moon-icon");

    if (!themeToggle || !sunIcon || !moonIcon) return;

    function updateThemeIcons() {
      const isDark = document.documentElement.classList.contains("dark");

      if (isDark) {
        sunIcon?.classList.add("hidden");
        moonIcon?.classList.remove("hidden");
        themeToggle?.setAttribute("aria-pressed", "true");
      } else {
        sunIcon?.classList.remove("hidden");
        moonIcon?.classList.add("hidden");
        themeToggle?.setAttribute("aria-pressed", "false");
      }
    }

    // Update icons on load
    updateThemeIcons();

    themeToggle.addEventListener("click", () => {
      if (typeof window.toggleTheme === "function") {
        window.toggleTheme();
        updateThemeIcons();
      }
    });

    // Listen for theme changes from other sources
    window.addEventListener("theme-change", updateThemeIcons);
  }

  // Mobile menu functionality
  function initMobileMenu() {
    const mobileMenuToggle = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const hamburgerIcon = document.getElementById("hamburger-icon");
    const xIcon = document.getElementById("x-icon");

    if (!mobileMenuToggle || !mobileMenu || !hamburgerIcon || !xIcon) return;

    let isOpen = false;

    function openMobileMenu() {
      isOpen = true;
      mobileMenu?.classList.remove("hidden");
      hamburgerIcon?.classList.add("hidden");
      xIcon?.classList.remove("hidden");
      mobileMenuToggle?.setAttribute("aria-expanded", "true");
      mobileMenuToggle?.setAttribute("aria-label", "Close mobile menu");

      // Focus management - focus first navigation link
      const firstNavLink = mobileMenu?.querySelector("nav a");
      if (firstNavLink && 'focus' in firstNavLink && typeof firstNavLink.focus === 'function') {
        (firstNavLink as HTMLElement).focus();
      }
    }

    function closeMobileMenu() {
      isOpen = false;
      mobileMenu?.classList.add("hidden");
      hamburgerIcon?.classList.remove("hidden");
      xIcon?.classList.add("hidden");
      mobileMenuToggle?.setAttribute("aria-expanded", "false");
      mobileMenuToggle?.setAttribute("aria-label", "Open mobile menu");

      // Return focus to toggle button
      mobileMenuToggle?.focus();
    }

    function toggleMobileMenu() {
      if (isOpen) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    }

    // Event listeners
    mobileMenuToggle.addEventListener("click", toggleMobileMenu);

    // Close mobile menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll("a");
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (isOpen) {
          closeMobileMenu();
        }
      });
    });

    // Close mobile menu when pressing Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isOpen) {
        closeMobileMenu();
      }
    });

    // Close mobile menu when clicking the blurred background
    mobileMenu.addEventListener("click", (e) => {
      if (e.target === mobileMenu) {
        if (isOpen) {
          closeMobileMenu();
        }
      }
    });
  }

  // Force fixed positioning for reliable sticky behavior
  function initStickyHeaderFallback() {
    const header = document.querySelector("header");
    if (!header) return;

    // Force fixed positioning as the primary solution
    function forceFixedPositioning() {
      if (!header) return;
      header.classList.add("fixed-fallback");
      document.body.style.paddingTop = "4rem";

      // Ensure header stays at top during all scroll events
      let ticking = false;
      function updateHeaderPosition() {
        if (!header) return;
        header.style.position = "fixed";
        header.style.top = "0";
        header.style.left = "0";
        header.style.right = "0";
        header.style.zIndex = "50";
        ticking = false;
      }

      function onScroll() {
        if (!ticking) {
          requestAnimationFrame(updateHeaderPosition);
          ticking = true;
        }
      }

      window.addEventListener("scroll", onScroll, { passive: true });

      // Also update on resize
      window.addEventListener("resize", updateHeaderPosition, {
        passive: true,
      });

      // Initial positioning
      updateHeaderPosition();
    }

    // Run immediately - don't wait for testing
    forceFixedPositioning();
  }

  // Initialize components when DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    initThemeToggle();
    initMobileMenu();
    initStickyHeaderFallback();
  });

  // Re-initialize when navigating in SPA-like behavior
  document.addEventListener("astro:page-load", () => {
    initThemeToggle();
    initMobileMenu();
    initStickyHeaderFallback();
  });
</script>

<style>
  /* Ensure smooth transitions for mobile menu */
  #mobile-menu {
    transition: all 0.2s ease-in-out;
  }

  /* Add subtle animation to theme toggle */
  #theme-toggle svg {
    transition: transform 0.2s ease-in-out;
  }

  #theme-toggle:hover svg {
    transform: scale(1.1);
  }

  /* Ensure glass effect works properly */
  .glass-effect {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  /* Fixed header positioning - primary solution */
  header {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    z-index: 50 !important;
    width: 100% !important;
  }

  /* Ensure body has proper padding for fixed header */
  body {
    padding-top: 4rem !important; /* Height of header */
  }

  /* Mobile menu full-screen animations */
  @media (max-width: 767px) {
    #mobile-menu {
      opacity: 0;
      transition: opacity 0.3s ease-out;
    }

    #mobile-menu:not(.hidden) {
      opacity: 1;
    }

    /* Navigation container ease-in animation */
    #mobile-nav-container {
      opacity: 0;
      transform: scale(0.9) translateY(20px);
      transition:
        opacity 0.5s ease-in,
        transform 0.5s ease-in;
    }

    #mobile-menu:not(.hidden) #mobile-nav-container {
      opacity: 1;
      transform: scale(1) translateY(0);
      transition-delay: 0.1s;
    }

    /* Navigation items cascade animation */
    #mobile-menu nav a {
      opacity: 0;
      transform: translateY(15px);
      transition:
        opacity 0.3s ease-out,
        transform 0.3s ease-out;
    }

    #mobile-menu:not(.hidden) nav a {
      opacity: 1;
      transform: translateY(0);
    }

    /* Staggered animation delay for each nav item (after container) */
    #mobile-menu:not(.hidden) nav a:nth-child(1) {
      transition-delay: 0.3s;
    }
    #mobile-menu:not(.hidden) nav a:nth-child(2) {
      transition-delay: 0.4s;
    }
    #mobile-menu:not(.hidden) nav a:nth-child(3) {
      transition-delay: 0.5s;
    }
    #mobile-menu:not(.hidden) nav a:nth-child(4) {
      transition-delay: 0.6s;
    }
    #mobile-menu:not(.hidden) nav a:nth-child(5) {
      transition-delay: 0.7s;
    }

    /* Clean hover effects for transparent items */
    #mobile-menu nav a:hover {
      transform: translateY(-2px) scale(1.02);
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    #mobile-menu,
    #mobile-nav-container,
    #mobile-menu nav a {
      transition: none !important;
      transform: none !important;
      opacity: 1 !important;
    }

    #mobile-menu nav a:hover {
      transform: none !important;
    }
  }
</style>
