---
export interface Props {
  title?: string;
  subtitle?: string;
  price?: string;
  servings?: number;
  pricePerServing?: string;
  ctaText?: string;
  ctaUrl?: string;
  rating?: number;
  reviewCount?: number;
  guaranteeText?: string;
}

const {
  title = "Introducing Catalyst",
  subtitle = "Our flagship pre-workout engineered for clean energy, enhanced performance, and zero compromise on quality.",
  price = "$30.00",
  servings = 30,
  pricePerServing = "$1.33",
  ctaText = "Order Catalyst Now", 
  ctaUrl = "https://gumroad.com/l/nbs-catalyst",
  rating = 4.8,
  reviewCount = 127,
  guaranteeText = "Free shipping on orders over $50 | 30-day money-back guarantee"
} = Astro.props;

// Product benefits data
const productBenefits = [
  {
    text: "No artificial colors or flavors",
    color: "bg-nbs-secondary"
  },
  {
    text: "No proprietary blends - full transparency",
    color: "bg-nbs-accent"
  },
  {
    text: "No crash or jitters", 
    color: "bg-nbs-primary"
  }
];

// Key ingredients data
const keyIngredients = [
  {
    name: "Creatine Monohydrate",
    description: "Muscle power & strength",
    dosage: "5g",
    borderColor: "border-nbs-primary/20"
  },
  {
    name: "L-Citrulline",
    description: "Enhanced blood flow & pumps", 
    dosage: "2g",
    borderColor: "border-nbs-secondary/20"
  },
  {
    name: "Guarana Extract",
    description: "Natural, sustained energy",
    dosage: "400mg",
    borderColor: "border-nbs-accent/20"
  },
  {
    name: "Beta-Alanine",
    description: "Muscular endurance",
    dosage: "2g", 
    borderColor: "border-nbs-natural/20"
  }
];
---

<section class="py-16 lg:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-nbs-trust mb-4">
          {title.split(' ').slice(0, -1).join(' ')} <span class="gradient-text">{title.split(' ').slice(-1)[0]}</span>
        </h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          {subtitle}
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Product Benefits -->
        <div class="space-y-8">
          <div class="clinical-card p-6">
            <h3 class="text-xl font-semibold text-nbs-trust mb-4">
              No BS Formula
            </h3>
            <p class="text-muted-foreground leading-relaxed mb-6">
              Unlike other pre-workouts loaded with fillers and artificial
              ingredients, Catalyst delivers exactly what your body needs -
              nothing more, nothing less.
            </p>

            <div class="space-y-4">
              {productBenefits.map((benefit) => (
                <div class="flex items-center gap-3">
                  <div class={`w-3 h-3 ${benefit.color} rounded-full`}></div>
                  <span class="text-sm">{benefit.text}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Key Ingredients -->
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-nbs-trust">
              Clinical-Grade Ingredients
            </h3>

            <div class="grid gap-4">
              {keyIngredients.map((ingredient) => (
                <div class={`flex items-center justify-between p-4 bg-nbs-clinical rounded-lg border ${ingredient.borderColor}`}>
                  <div>
                    <h4 class="font-semibold text-nbs-trust">
                      {ingredient.name}
                    </h4>
                    <p class="text-sm text-muted-foreground">
                      {ingredient.description}
                    </p>
                  </div>
                  <span class="dosage-highlight text-lg">{ingredient.dosage}</span>
                </div>
              ))}
            </div>

            <div class="text-sm text-muted-foreground mt-4">
              Plus Vitamin B12, Vitamin C, and monk fruit sweetener for
              optimal performance and taste.
            </div>
          </div>
        </div>

        <!-- Pricing & CTA -->
        <div class="space-y-6">
          <div class="clinical-card p-8 text-center">
            <div class="mb-6">
              <div class="text-4xl font-bold text-nbs-primary mb-2">
                {price}
              </div>
              <div class="text-muted-foreground">
                {servings} servings | {pricePerServing} per workout
              </div>
            </div>

            <a
              href={ctaUrl}
              class="gumroad-button w-full inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-nbs-primary hover:bg-nbs-primary/90 rounded-lg transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-nbs-primary focus:ring-offset-2 shadow-lg hover:shadow-xl mb-4"
              data-gumroad-single-product="true"
            >
              {ctaText}
              <svg
                class="ml-2 w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>

            <div class="text-xs text-muted-foreground">
              {guaranteeText}
            </div>
          </div>

          <!-- Social Proof -->
          <div class="text-center">
            <div class="flex items-center justify-center gap-1 mb-2">
              {[...Array(5)].map((_, i) => (
                <svg
                  key={i}
                  class="w-5 h-5 text-nbs-accent fill-current"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <div class="text-sm text-muted-foreground">
              {rating}/5 from {reviewCount}+ customers
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>