---
export interface Props {
  product: {
    name: string;
    price: number;
    originalPrice?: number;
    rating: number;
    reviewCount: number;
    inStock: boolean;
    shortDescription: string;
    servingsPerContainer: number;
    gumroadUrl: string;
    images: Array<{
      src: string;
      alt: string;
      thumbnail: string;
    }>;
  };
}

const { product } = Astro.props;
---

<!-- Product Header Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 mb-12">
  <!-- Product Image Gallery -->
  <div
    class="space-y-4"
    data-product-gallery
    data-images={JSON.stringify(product.images)}
    data-product-name={product.name}
  >
    <!-- Gallery will be initialized by JavaScript -->
  </div>

  <!-- Product Information -->
  <div class="space-y-6 lg:max-w-2xl lg:mx-auto">
    <!-- Product Title and Rating -->
    <div class="lg:text-center">
      <div class="flex items-center gap-2 mb-2 lg:justify-center">
        <span
          class="badge badge-secondary bg-nbs-secondary/10 text-nbs-secondary"
        >
          Pharmacist Formulated
        </span>
        <span
          class="badge badge-outline border-nbs-natural text-nbs-natural"
        >
          Third-Party Tested
        </span>
      </div>

      <h1 class="text-3xl lg:text-4xl font-bold text-foreground mb-2 lg:text-center">
        {product.name}
      </h1>

      <div class="flex items-center gap-4 mb-4 lg:justify-center">
        <!-- Star Rating -->
        <div class="flex items-center gap-1">
          {
            [...Array(5)].map((_, i) => (
              <svg
                key={i}
                class={`w-5 h-5 ${i < Math.floor(product.rating) ? "text-nbs-accent fill-current" : "text-muted-foreground"}`}
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))
          }
          <span class="text-sm text-muted-foreground ml-2">
            {product.rating} ({product.reviewCount} reviews)
          </span>
        </div>
      </div>

      <p class="text-lg text-muted-foreground leading-relaxed lg:text-center">
        {product.shortDescription}
      </p>
    </div>

    <!-- Pricing -->
    <div class="space-y-2 lg:text-center">
      <div class="flex items-center gap-3 lg:justify-center">
        <span class="text-3xl font-bold text-foreground">
          ${product.price}
        </span>
        {
          product.originalPrice && (
            <span class="text-lg text-muted-foreground line-through">
              ${product.originalPrice}
            </span>
          )
        }
        {
          product.originalPrice && (
            <span class="badge badge-destructive bg-nbs-accent text-white">
              Save ${(product.originalPrice - product.price).toFixed(2)}
            </span>
          )
        }
      </div>
      <p class="text-sm text-muted-foreground lg:text-center">
        {product.servingsPerContainer} servings â€¢ ${
          (product.price / product.servingsPerContainer).toFixed(2)
        } per serving
      </p>
    </div>

    <!-- Stock Status -->
    <div class="flex items-center gap-2 lg:justify-center">
      <div class="w-3 h-3 bg-nbs-secondary rounded-full"></div>
      <span class="text-sm font-medium text-nbs-secondary"
        >In Stock - Ships within 1-2 business days</span
      >
    </div>

    <!-- Quantity Selector (Enhanced by JavaScript) -->
    <div
      id="quantity-selector"
      data-base-price={product.price}
      data-gumroad-url={product.gumroadUrl}
    >
      <!-- Fallback content for users without JavaScript -->
      <noscript>
        <div class="space-y-4">
          <div class="text-center mb-4">
            <h3 class="text-lg font-semibold mb-2">Choose Your Supply</h3>
            <p class="text-sm text-muted-foreground">
              Select a quantity and proceed to checkout
            </p>
          </div>
          <div class="card bg-gradient-to-r from-nbs-primary/5 to-nbs-secondary/5">
            <div class="card-content p-4 text-center">
              <div class="mb-3">
                <div class="text-lg font-semibold">1 Container</div>
                <div class="text-2xl font-bold text-nbs-primary">${product.price}</div>
                <div class="text-sm text-muted-foreground">30 days supply</div>
              </div>
              <a 
                href={product.gumroadUrl}
                target="_blank"
                class="btn btn-primary btn-lg w-full"
              >
                Purchase - ${product.price}
              </a>
            </div>
          </div>
        </div>
      </noscript>
    </div>

    <!-- Primary CTA -->
    <div class="space-y-4" id="purchase-section">
      <button
        class="btn btn-primary btn-lg purchase-button w-full text-lg py-6 transition-all duration-300"
        onclick={`window.open('${product.gumroadUrl}', '_blank')`}
      >
        Add to Cart - ${product.price}
      </button>

      <div class="grid grid-cols-2 gap-3">
        <button
          class="btn btn-outline btn-lg"
          onclick="document.getElementById('ingredient-breakdown')?.scrollIntoView({ behavior: 'smooth' })"
        >
          View Ingredients
        </button>
        <button
          class="btn btn-outline btn-lg"
          onclick="document.getElementById('reviews')?.scrollIntoView({ behavior: 'smooth' })"
        >
          Read Reviews
        </button>
      </div>
    </div>

    <!-- Key Benefits -->
    <div class="card">
      <div class="card-header lg:text-center">
        <h3 class="card-title text-lg">Why Choose Catalyst?</h3>
      </div>
      <div class="card-content">
        <ul class="space-y-2 text-sm lg:space-y-3">
          <li class="flex items-center gap-2 lg:justify-center">
            <svg
              class="w-4 h-4 text-nbs-secondary flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Clinical doses - no underdosed ingredients</span>
          </li>
          <li class="flex items-center gap-2 lg:justify-center">
            <svg
              class="w-4 h-4 text-nbs-secondary flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>100% natural ingredients, no artificial additives</span>
          </li>
          <li class="flex items-center gap-2 lg:justify-center">
            <svg
              class="w-4 h-4 text-nbs-secondary flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Third-party tested for purity and potency</span>
          </li>
          <li class="flex items-center gap-2 lg:justify-center">
            <svg
              class="w-4 h-4 text-nbs-secondary flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Formulated by licensed pharmacists</span>
          </li>
          <li class="flex items-center gap-2 lg:justify-center">
            <svg
              class="w-4 h-4 text-nbs-secondary flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Made in FDA-registered facility in the USA</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>