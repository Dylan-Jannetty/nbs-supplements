---
export interface Props {
  title?: string;
  subtitle?: string;
  instructions?: Array<{
    step: number;
    title: string;
    description: string;
    color: string;
  }>;
  proTips?: string[];
}

const {
  title = "How to Use Catalyst",
  subtitle = "Get the most out of your pre-workout with proper timing and dosing",
  instructions = [
    {
      step: 1,
      title: "Mix",
      description: "Combine 1 scoop with 8-10 oz of cold water",
      color: "nbs-primary"
    },
    {
      step: 2,
      title: "Time",
      description: "Consume 15-30 minutes before training",
      color: "nbs-secondary"
    },
    {
      step: 3,
      title: "Train",
      description: "Experience clean energy and enhanced performance",
      color: "nbs-accent"
    }
  ],
  proTips = [
    "Take on an empty stomach or 2-3 hours after eating for best absorption",
    "Start with half a scoop to assess tolerance if you're sensitive to stimulants",
    "Avoid taking within 6 hours of bedtime to prevent sleep disruption",
    "Cycle off for 1-2 weeks every 8-10 weeks to maintain effectiveness"
  ]
} = Astro.props;
---

<!-- Usage Instructions -->
<section class="mb-12">
  <div class="card">
    <div class="card-header">
      <h2 class="card-title text-xl">{title}</h2>
      <p class="card-description">
        {subtitle}
      </p>
    </div>
    <div class="card-content space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {instructions.map((instruction) => (
          <div class="text-center p-4 rounded-lg bg-muted/50">
            <div
              class={`w-12 h-12 bg-${instruction.color} rounded-full flex items-center justify-center mx-auto mb-3`}
            >
              <span class="text-white font-bold text-lg">{instruction.step}</span>
            </div>
            <h4 class="font-medium mb-2">{instruction.title}</h4>
            <p class="text-sm text-muted-foreground">
              {instruction.description}
            </p>
          </div>
        ))}
      </div>

      <hr class="border-border" />

      <div class="bg-blue-50 dark:bg-blue-950/30 p-4 rounded-lg">
        <h4 class="font-medium mb-2 flex items-center gap-2">
          <svg
            class="w-4 h-4 text-nbs-primary"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
              clip-rule="evenodd"></path>
          </svg>
          Pro Tips
        </h4>
        <ul class="text-sm text-muted-foreground space-y-2">
          {proTips.map((tip) => (
            <li>â€¢ {tip}</li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>