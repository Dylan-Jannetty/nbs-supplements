---
export interface Props {
  member: {
    name: string;
    role: string;
    experience: string;
    specialization: string;
    education: string;
    image: string;
    bio: string;
  };
}

const { member } = Astro.props;
---

<div class="card hover:shadow-lg transition-all duration-200 group">
  <div class="card-header text-center">
    <!-- Team Member Photo Placeholder -->
    <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-gradient-to-br from-nbs-primary/20 to-nbs-secondary/20 border-4 border-background shadow-md flex items-center justify-center group-hover:scale-105 transition-transform duration-200">
      <svg class="w-10 h-10 text-nbs-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
    <h3 class="card-title text-lg">{member.name}</h3>
    <p class="card-description text-nbs-primary font-medium">{member.role}</p>
  </div>
  <div class="card-content text-center text-sm space-y-2">
    <div class="flex items-center justify-center gap-2 text-muted-foreground">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>{member.experience} Experience</span>
    </div>
    <div class="flex items-center justify-center gap-2 text-muted-foreground">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <span>{member.education}</span>
    </div>
    <span class="badge badge-secondary text-xs bg-nbs-secondary/10 text-nbs-secondary">
      {member.specialization}
    </span>
    <p class="text-muted-foreground text-xs leading-relaxed pt-2">
      {member.bio}
    </p>
  </div>
</div>