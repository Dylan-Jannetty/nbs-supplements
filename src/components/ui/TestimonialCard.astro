---
export interface Props {
  rating: number;
  quote: string;
  author: string;
  role: string;
  initials: string;
  colorClass?: string;
}

const {
  rating = 5,
  quote,
  author,
  role,
  initials,
  colorClass = "nbs-primary"
} = Astro.props;
---

<div class="clinical-card p-6">
  <div class="flex items-center gap-1 mb-4">
    {[...Array(rating)].map((_, i) => (
      <svg
        key={i}
        class="w-4 h-4 text-nbs-accent fill-current"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>
  <blockquote class="text-muted-foreground mb-4 leading-relaxed">
    "{quote}"
  </blockquote>
  <div class="flex items-center gap-3">
    <div class={`w-10 h-10 bg-${colorClass}/20 rounded-full flex items-center justify-center`}>
      <span class={`text-sm font-semibold text-${colorClass}`}>
        {initials}
      </span>
    </div>
    <div>
      <div class="font-semibold text-nbs-trust">{author}</div>
      <div class="text-xs text-muted-foreground">
        {role}
      </div>
    </div>
  </div>
</div>